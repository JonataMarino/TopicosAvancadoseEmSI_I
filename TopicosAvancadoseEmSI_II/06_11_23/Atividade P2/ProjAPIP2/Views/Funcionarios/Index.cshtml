@model IEnumerable<ProjAPIP2.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Funcionários</h1>

<p>
    <a asp-action="Create">Criar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFuncionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnderecoFuncionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TelefoneFuncionario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailFuncionário)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeFuncionario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnderecoFuncionario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelefoneFuncionario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailFuncionário)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
